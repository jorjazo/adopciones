{% extends "/templates/base/base.twig" %}

{% block body %}

<h1>{{ translate("Sign in") }}</h1>

<form method="POST">

    <div class="form-group">
      <label for="input1">{{ translate("Nombre de usuario") }}:</label>
      <input id="input1" class="form-control" type="text" name="username" placeholder="Nombre de Usuario"/>
    </div>
    <div class="form-group">
      <label for="input2">Contraseña:</label>
      <input id="input2" class="form-control" type="password" name="password" placeholder="Contraseña"/>
    </div>
    
    {{ csrfField }}
    <button type="submit" class="btn btn-default">Ingresar</button>
</form>


{% endblock %}
